<div class="container-xl px-4 mt-4">


    <form enctype="multipart/form-data" method="post" asp-action="Create" asp-area="CompanyManager" asp-controller="Employee">


        <div class="card-header" style="font-size:20px;">Profile Details</div>
        <br />
        <div class="mb-3">
            <div class="card mb-4 mb-xl-0">
                <div class="card-header" style="font-size:18px;">Profile Picture</div>

                <div class="card-body text-center">

                    <input lang="en" type="file" asp-for="@Model.ProfilePhoto" class="form-control" />

                </div>
            </div>
        </div>

        <div class="card mb-4 mb-xl-0">
            <div class="card-header" style="font-size:18px;">Details</div>
        
            <div class="card-body">
        <div class="mb-3">
            <label style="font-size:16px;" for="form3Example1c" asp-for="@Model.AppUser.UserName">User Name:</label>
            <input style="font-size:16px;" asp-for="@Model.AppUser.UserName" id="form3Example1c" type="text" />
           @* <span asp-validation-for="userName" class="text-danger"></span>*@

        </div>

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.Email class="small mb-1" for="inputEmailAddress">E-mail:</label>
            <input style="font-size:16px;" asp-for=@Model.Email  id="inputEmailAddress" type="email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.AppUser.Email class="small mb-1" for="inputEmailAddress">Confirm E-mail:</label>
            <input style="font-size:16px;" asp-for=@Model.AppUser.Email  id="inputEmailAddress" type="email">
            <span style="font-size:16px;" asp-validation-for="Email" class="text-danger"></span>
        </div>


        <div class="form-outline flex-fill mb-0">
                    <label style="font-size:16px;" class="form-label" for="form3Example1c" asp-for="@Model.userPassword">Password:</label>

                    <input style="font-size:16px;" asp-for="@Model.userPassword" id="form3Example1c" type="password" />
            <span asp-validation-for="userPassword" class="text-danger"></span>

        </div>

                <div class="mb-3">
                    <label style="font-size:16px;"  class="small mb-1" for="inputUsername">Company:</label>
                    <input style="background-color:lightgrey;" style="font-size:16px;" readonly id="inputUsername" type="text" value="@companyName.ToString()">
                </div>

        <div class="mb-3">
            <label hidden style="font-size:16px;" asp-for=@Model.CompanyID class="small mb-1" for="inputUsername">CompanyID:</label>
            <input hidden style="background-color:lightgrey;" style="font-size:16px;" readonly asp-for=@Model.CompanyID id="inputUsername" type="text" value="@companyId" >
        </div>

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.CitizenId class="small mb-1" for="inputUsername">CitizenID:</label>
            <input style="font-size:16px;" asp-for=@Model.CitizenId id="inputUsername" type="text">
            <span  asp-validation-for="CitizenId" class="text-danger"></span>

        </div>

        <!-- Form Group (username)-->

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.Name class="small mb-1" for="inputUsername">First Name:</label>
            <input style="font-size:16px;" asp-for=@Model.Name id="inputUsername" type="text">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.SecondName class="small mb-1" for="inputUsername">Second Name:</label>
            <input style="font-size:16px;" asp-for=@Model.SecondName  id="inputUsername" type="text">
        </div>

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.LastName class="small mb-1" for="inputUsername">Last Name:</label>
            <input style="font-size:16px;" asp-for=@Model.LastName  id="inputUsername" type="text">
            <span asp-validation-for="LastName" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.SecondLastName class="small mb-1" for="inputUsername">Second Last Name:</label>
            <input style="font-size:16px;" asp-for=@Model.SecondLastName  id="inputUsername" type="text">
        </div>

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.BirthDate class="small mb-1" for="inputUsername">Birth Date:</label>
            <input style="font-size:16px;" asp-for=@Model.BirthDate  id="form4Example2" type="date">
            <span asp-validation-for="BirthDate" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.BirhtPlace class="small mb-1" for="inputUsername">Birth Place:</label>
            <input style="font-size:16px;" asp-for=@Model.BirhtPlace  id="inputUsername" type="text">
            <span asp-validation-for="BirhtPlace" class="text-danger"></span>


        </div>
        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.StartDate class="small mb-1" for="inputUsername">Start Date:</label>
            <input style="font-size:16px;" asp-for=@Model.StartDate  id="form4Example2" type="date">
            <span asp-validation-for="StartDate" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.Address class="small mb-1" for="inputLocation">Address:</label>
            <input style="font-size:16px;" asp-for=@Model.Address id="inputLocation" type="text">
            <span asp-validation-for="Address" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.PhoneNumber class="small mb-1" for="inputLocation">Phone Number:</label>
            <input style="font-size:16px;" asp-for=@Model.PhoneNumber  id="inputLocation" type="text">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label style="font-size:16px;" asp-for=@Model.Salary class="small mb-1" for="inputLocation">Salary:</label>
            <input asp-for=@Model.Salary id="inputLocation" type="number">
            
            <span asp-validation-for="Salary" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label style="font-size:16px;" class="form-label" for="form4Example2">Profession:</label>
            <select style="font-size:16px;" style="height:max-content" asp-for="@Model.Profession" asp-items="@Html.GetEnumSelectList<Profession>()" >
                <option value="">Choose profession..</option>
            </select>
            <span asp-validation-for="Profession" class="text-danger"></span>

        </div>


        <div class="mb-3">
            <label style="font-size:16px;" class="form-label" for="form4Example2">Department:</label>
            <select style="font-size:16px;" style="height:max-content" asp-for="@Model.Department" asp-items="@Html.GetEnumSelectList<Department>()" >
                <option value="">Choose department..</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>

        </div>

        <!-- Save changes button-->
        <button type="submit" style="font-size:16px;" class="btn btn-primary float-right">Create</button>

        </div>
        </div>

    </form>

</div>


</html>


