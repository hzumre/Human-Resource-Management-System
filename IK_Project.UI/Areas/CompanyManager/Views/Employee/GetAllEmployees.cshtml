@using IK_Project.UI.Areas.CompanyManager.Models.Employee;

@{
    ViewData["Title"] = "GetAllEmployees";
}


@model List<EmployeeListVM>

<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-primary" style="color:azure; font-size:larger" asp-action="Create">Add New Employee</a>
    </div>

</div>

<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>ID</th>
                    <th>Profile Photo</th>
                    <th>Name</th>
                    <th>Second Name</th>
                    <th>LastName</th>
                    <th>Second LastName</th>
                    <th>StartDate</th>
                    <th>Salary</th>
                    <th>Department</th>
                    <th>Profession</th>
@*                    <th>Edit</th>
                    <th>Delete</th>*@

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Id">@item.Id</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                       
                        <td>

                            @if(item.ProfilePhoto != null)
                            {
                                <img class="fw-normal mb-1" src="~/images/@item.ProfilePhoto" asp-for="@item.ProfilePhoto">
                            }
                            else
                            {
                                <img class="fw-normal mb-1" src="~/images/myLogo.jpg" asp-for="@item.ProfilePhoto">
                            }

                           
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Name">@item.Name</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.SecondName">@item.SecondName</p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.LastName">@item.LastName</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.SecondLastName">@item.SecondLastName</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.StartDate">@item.StartDate.ToShortDateString()</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Salary">@item.Salary</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Department">@item.Department</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Profession">@item.Profession</p>
                            <p class="text-muted mb-0"></p>
                        </td>
@*                        <td>
                            <a asp-action="Edit" asp-area="Admin" asp-controller="Menu" asp-route-id="@item.Id" type="button" class="btn btn-secondary">
                                Edit
                            </a>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-area="Admin" asp-controller="Menu" asp-route-id="@item.Id" type="button" class="btn btn-danger">
                                Delete
                            </a>
                        </td>*@


                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>

