
@{
    ViewData["Title"] = "GetAllActiveCompanyManagers";
}

@model List<CompanyManagerListVM>

<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-primary" style="color:azure; font-size:larger" asp-action="Create">Add New CompanyManager</a>
    </div>

</div>

<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    @*<th>CompanyManager ID</th>*@
                    <th>Name</th>
                    <th>SecondName</th>
                    <th>LastName</th>
                    <th>SecondLastName</th>
                    <th>Email</th>
                    <th>PhoneNumber</th>
                    @*<th>Company</th>*@
                    <th>Status</th>
                    <th>Detail</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @* <td>
                    <p class="fw-normal mb-1" asp-for="@item.Id">@item.Id</p>
                    <p class="text-muted mb-0"></p>
                    </td>*@
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Name">@item.Name</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.SecondName">@item.SecondName</p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.LastName">@item.LastName</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.SecondLastName">@item.SecondLastName</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Email">@item.Email</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.PhoneNumber">@item.PhoneNumber</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                       @* <td>
                            <p class="fw-normal mb-1" asp-for="@item.CompanyID">@item.CompanyID</p>
                            <p class="text-muted mb-0"></p>
                        </td>*@

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Status">@item.Status</p>
                        </td>

                        <td>
                            <a asp-action="Details" asp-controller="CompanyManager" asp-route-id="@item.Id" type="button" class="btn btn-info">
                                Detail
                            </a>
                        </td>

                        <td>
                            <a asp-action="Delete" asp-controller="CompanyManager" asp-route-id="@item.Id" type="button" class="btn btn-danger">
                                Delete
                            </a>
                        </td>


                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>

