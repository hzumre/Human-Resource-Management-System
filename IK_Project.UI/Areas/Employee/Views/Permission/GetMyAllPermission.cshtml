@using IK_Project.UI.Areas.Employee.Models.PermissionVMs;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "GetMyAllPermission";
}

@model List<PermissionListVM>

<div class="row">
    <div class="col-lg-12">
        <a class="btn btn-primary" style="color:azure; font-size:larger" asp-action="Add">Create new permission demand</a>
    </div>

</div>

<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>ID</th>
                    <th>Permission Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Number Of Days</th>
                    <th>Confirmation Status</th>
                    <th>Date of Reply</th>
                    <th>Reason Of Rejection</th>
                    @*   <th>Detail</th>
                    <th>Delete</th>*@
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.Id">@item.Id</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.PermissionType">@item.PermissionType</p>
                            <p class="text-muted mb-0"></p>
                        </td>



                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.StartDate">@item.StartDate.ToShortDateString()</p>
                            <p class="text-muted mb-0"></p>
                        </td>

                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.EndDate">@item.EndDate.ToShortDateString()</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.NumberOfDays">@item.NumberOfDays</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        <td>
                            <p class="fw-normal mb-1" asp-for="@item.ConfirmationStatus">@item.ConfirmationStatus</p>
                            <p class="text-muted mb-0"></p>
                        </td>
                        @if (item.DateOfReply != null)
                        {
                            <td>
                                <p class="fw-normal mb-1" asp-for="@item.DateOfReply">@item.DateOfReply.Value.ToShortDateString()</p>
                            </td>
                        }
                        @if (item.ReasonOfRejection != null)
                        {
                            <td>
                                <p class="fw-normal mb-1" asp-for="@item.ReasonOfRejection">@item.ReasonOfRejection</p>
                            </td>
                        }
                        @*    <td>
                    <a asp-action="Details" asp-area="Admin" asp-controller="Company" asp-route-id="@item.Id" type="button" class="btn btn-info">
                    Detail
                    </a>
                    </td>*@
                        @*   <td>
                    <a asp-action="Delete" asp-area="Admin" asp-controller="Company" asp-route-id="@item.Id" type="button" class="btn btn-danger">
                    Delete
                    </a>
                    </td>
                    *@



                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>

