<script>
    window.setTimeout(function () {
        $(".alert").fadeTo(500, 0).slideUp(500, function () {
            $(this).remove();
        });
    }, 3000);
</script>


<div class="container-xl px-4 mt-4">

    <form enctype="multipart/form-data" method="post" asp-action="Add" asp-area="Employee" asp-controller="Expense">

        @if (TempData["SalaryError"] != null)
        {
            <div class="alert" id="alert" role="alert">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                    <strong>Warning!</strong>  @TempData["SalaryError"]
                </div>
        }


        <div class="mb-3">
            <div class="card mb-4 mb-xl-0">
                <div class="card-header" style="font-size:20px">Expense File</div>
                <div class="card-body text-center">

                    <input type="hidden" asp-for="ExpenseFilePath" />
                    <label hidden asp-for="ExpenseFilePath" class="control-label"></label>
                    <input type="file" accept=".pdf, .jpg, .jpeg, .png" asp-for="ExpenseFilePath" class="form-control" />
                    @*<span asp-validation-for="ExpenseFilePath" class="text-danger"></span>*@

                </div>
            </div>
        </div>


        <div class="card mb-4 mb-xl-0">
            <div class="card-header" style="font-size:20px">Expense Details</div>
            <div class="card-body">

                <div class="mb-3">
                    <label style="font-size:16px;" asp-for="ExpenseType" class="small mb-1">Expense Type:</label>
                    <select style="height:max-content; font-size:16px;" asp-for="ExpenseType" asp-items="@Html.GetEnumSelectList<ExpenseType>()"></select>

                </div>


                <div class="mb-3">
                    <label asp-for="Amount" style="font-size:16px;" class="small mb-1" for="form4Example1">Amount:</label>
                    <input style="font-size:16px;" asp-for="Amount" type="number" max="1000000" id="form4Example1" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label style="font-size:16px;"  for="form4Example1" asp-for="CurrencyUnit" class="small mb-1">Currency Unit:</label>
                    <select style="font-size:16px;" style="height:max-content" asp-for="CurrencyUnit" asp-items="@Html.GetEnumSelectList<CurrecyUnit>()"></select>

                </div>

              <div class="mb-3">
                    <label style="font-size:16px;" class="small mb-1" for="form4Example1">Created Date:</label>
                    
                    <input style="font-size:16px; background-color:lightgrey;" readonly asp-for=CreatedDate id="inputCompany" type="text" value="@DateTime.Now.ToShortDateString()">

                </div>

                <div class="mb-3">
                    <label hidden class="small mb-1" for="form4Example1">EmployeeId:</label>
                    <input hidden readonly asp-for="EmployeeId" id="form4Example1" class="form-control" />
                </div>
                <div class="mb-3">
                    <label hidden class="small mb-1" for="form4Example1">AppUserId:</label>
                    <input hidden readonly asp-for="AppUserId" id="form4Example1" class="form-control" />
                </div>

                <button type="submit" style="font-size:16px;" class="btn btn-primary float-right">Send Expense Demand</button>

            </div>


        </div>







    </form>



</div>

